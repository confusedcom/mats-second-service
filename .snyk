# Snyk (https://snyk.io) policy file for mats-second-service
version: v1.22.0

# Exclude development dependencies from security scans
exclude:
  global:
    - "test/**"
    - "**/*.test.js"

# Patch strategy configuration
patch:
  strategy: update

# Language-specific exclusions
language-settings:
  go:
    ignore-dev-dependencies: true

# Ignore specific vulnerabilities (with expiration)
ignore:
  # No vulnerabilities currently ignored
  # Example:
  # SNYK-JS-LODASH-1018905:
  #   - '*':
  #       reason: Not affected - dev dependency only
  #       expires: 2024-12-31T23:59:59.999Z
  #       created: 2024-01-01T00:00:00.000Z

# Fail threshold configuration
failThreshold: high

# Monitor settings
monitor:
  org: confusedcom
  project: mats-second-service
